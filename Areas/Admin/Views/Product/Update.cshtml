@model Project.Models.Product
@{
    ViewBag.Title = "Product-Update";
}


  <div class="login-box">
  <h2>Update Item</h2>
  <form enctype="multipart/form-data" method="post" asp-area="Admin" asp-action="Update" asp-controller="Product">
    <input type="hidden" asp-for="@Model.ProductID">
    <div class="user-box">
     
      <input asp-for="@Model.Name" required=""> <label>Name</label>
    </div>

     <div class="user-box">
      
      <input asp-for="@Model.Price" required=""><label>Price</label>
    </div>
    <div class="user-box">
      <input asp-for="@Model.Category" style="height: 40px;"  required=""><label>Category</label>
    </div>
    
      <br>
      <button mdbRipple rippleColor="dark"
       type="submit"class="btn btn-outline-success btn-rounded" style="size: 4ch;">
        Update</button>
        
  </form>
</div>
  
<br><br>