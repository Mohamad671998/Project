
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300&display=swap" rel="stylesheet">
</head>

<body> 
  
    <header>
        <nav  id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar  box-shadow mb-3" style="border-color: forest green 1px;">
            <div class="container">
                <a class="navbar-brand active " style="color: green;font-size: 20px;">
                    <img style="width:33px;height:33px;margin-right:20px;" src="/images/Storelogo.png">Techno Da7hye</a>
                   <span class="v-line"></span>
                 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1" >
                         <li class="nav-item">
                             <a class="nav-link text-light" id="navtext" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                         </li>   
                        <li class="nav-item">
                            <a class="nav-link text-light" id="navtext" asp-area="" asp-controller="Product" asp-action="List">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" id="navtext" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" id="navtext"  asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            
                            <a class="nav-link text-light" id="navtext" asp-area="" asp-controller="Home" asp-action="Cart"><i class="fas fa-shopping-cart"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" id="navtext" asp-area="" asp-controller="Home" asp-action="Login"><i class="fas fa-user"></i></a>
                        </li>
                    </ul>

                    <div class="social-buttons">
                        <a href="https://www.facebook.com/" class="social-buttons__button social-button social-button--facebook" aria-label="Facebook">
                             <button type="button" class="btn btn-primary"><i class="fab fa-facebook-f"></i></button>
                        </a>
                        <a href="https://twitter.com/" class="social-buttons__button social-button social-button--twitter" aria-label="Twitter">
                             <button type="button" class="btn btn-info"><i class="fab fa-twitter"></i></button>
                        </a>
                         <a href="https://www.instagram.com/accounts/login/" class="social-buttons__button social-button social-button--instagram" aria-label="Instagram">
                            <button type="button" class="btn btn-danger"><i class="fab fa-instagram"></i></button>
                        </a>
                        <a href="https://www.whatsapp.com/" class="social-buttons__button social-button social-button--whatsapp" aria-label="Whatsapp">
                            <button type="button" class="btn btn-success"><i class="fab fa-whatsapp"></i></button>
                        </a>
                    </div>
                
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <style>
            body {
            background-color:#070707;
            color:white;
            }
        </style>    
            @RenderBody()
        </main>
    </div>

        <div class="footer-dark" style="border-top: 2px solid green;">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Services</h3>
                        <ul>
                            <li><a asp-area="" asp-controller="Product" asp-action="List">Shop</a></li>
                            <li><a href="#">Delivery</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Support</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>About</h3>
                        <ul>
                            <li><a href="@Url.Action("About", "Home")">Company</a></li>
                            <li><a href="@Url.Action("About", "Home")#Squad">Team</a></li>
                            <li><a href="@Url.Action("Contact", "Home")#MapTitle">Locate Us on Map</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>TECHNO DA7YE</h3>
                        <p> Our team is full of experts from different regions who are professionals in sales and trained to serve our customers in the best way possible.</p>
                    </div>
                    <div class="col item social" style="text-align: center;"><a href="https://www.facebook.com/"><i class="icon ion-social-facebook"></i></a><a href="https://twitter.com/"><i class="icon ion-social-twitter"></i></a><a href="https://www.instagram.com/accounts/login/"><i class="icon ion-social-instagram"></i></a><a href="https://www.whatsapp.com/"><i class="fab fa-whatsapp"></i></a></div>
                </div>
                <p class="copyright">Techno Da7ye © 2021</p>
            </div>
        </footer>
        
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>


</html>


